@using FlowerMall.Models;
@model List<tb_OrderSp>

<input type="hidden" value="@Model[0].OrderID" id="Order_ID" />
@for (int i = 0; i < Model.Count; i++)
{
    <div class="modalAjaxCommItem" style="margin-bottom:10px;">
        <span style="font-size:18px;">@Model[i].GoodName</span>
        <input id="CommGoodID_@i" type="hidden" value="@Model[i].GoodID" style="display:none" />
        <div>
            <img class="modalComm_img" src="@Model[i].GoodImg" />
            <textarea id="CommText_@i"  maxlength="50"  class="modalComm_text" placeholder="请输入商品评价。"></textarea>
        </div>
    </div>
}
