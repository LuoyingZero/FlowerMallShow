
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>花语后台管理页面</title>
    <link href="~/Content/bs4.pop.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bs4.pop.js"></script>
    <link href="~/Content/FlowerBack/animate.css" rel="stylesheet" />
    <link href="~/Content/FlowerBack/app-style.css" rel="stylesheet" />
    <link href="~/Content/FlowerBack/icons.css" rel="stylesheet" />
    <link href="~/Content/FlowerBack/pace.min.css" rel="stylesheet" />
    <link href="~/Content/FlowerBack/sidebar-menu.css" rel="stylesheet" />
    <style>
        /*右边*/
.container_right {
    /*border: 1px solid red;*/
    margin: 0px 20px;
    display: inline-block;
    height: 630px;
    width:100%;
    overflow:hidden;
}
.contRight_Item {
    display: inline-block;
    width: 240px;
    text-align: center;
    line-height: 20px;
    margin: 0px 5px;
    margin-top:20px;
    border:1px solid gray;
}
.contRight_Item:hover {
    border:1px solid red;
}
/*商品图片*/
.contRight_Item img{
    transition: all linear .6s;
}

.contRight_Item:hover img{
    transform: scale(1.1);
    color:orange;
}
.contRight_Item:hover .con_goodname{
    color:orange;
}
/*商品名称*/
.con_goodname {
    font-weight: 700;
    font-size: 18px;
    height: 20px;
    width: 130px;
    text-align: center;
    overflow: hidden;
    display: block;
    margin: 0px auto;
}
    </style>
</head>
<body class="bg-theme bg-theme1">

    <!-- Start wrapper-->
    <div id="wrapper">

        <!--Start sidebar-wrapper-->
        <div id="sidebar-wrapper" data-simplebar="" data-simplebar-auto-hide="true">
            <div class="brand-logo">
                <a href="~/flowerui/index" target="_blank">
                    <img src="~/Images/花语logo.png" class="" />
                </a>
            </div>
            <ul class="sidebar-menu do-nicescrol">
                <li class="sidebar-header">花语馨苑后台管理界面</li>
                <li class="active">
                    <a href="~/flowerback/main">
                        <i class="zmdi zmdi-view-dashboard"></i> <span>后台首页</span>
                    </a>
                </li>

                <li>
                    <a href="~/flowerback/goodinfo">
                        <i class="zmdi zmdi-book-image"></i> <span>商品管理</span>
                    </a>
                </li>

                <li>
                    <a href="~/flowerback/goodadd">
                        <i class="zmdi zmdi-assignment-o"></i> <span>上架商品</span>
                    </a>
                </li>

                <li>
                    <a href="javaScript:alert('请通过[商品管理]页面来修改商品');">
                        <i class="zmdi zmdi-grid"></i> <span>修改商品</span>
                    </a>
                </li>

                <li>
                    <a href="~/flowerback/orderinfo">
                        <i class="zmdi zmdi-calendar-check"></i> <span>订单管理</span>
                        <small class="badge float-right badge-light">New</small>
                    </a>
                </li>

                <li>
                    <a href="javaScript:alert('请通过[订单管理]页面来修改商品');">
                        <i class="zmdi zmdi-assignment-check"></i> <span>订单详情</span>
                    </a>
                </li>

                <li>
                    <a href="~/FlowerBack/UserInfo">
                        <i class="zmdi zmdi-account-circle"></i> <span>用户管理</span>
                    </a>
                </li>
            </ul>

        </div>
        <header style="height: 60px;
    background-color: rgba(0,0,0,.2);">

        </header>
        <!--End topbar header-->

        <div class="content-wrapper">
            <div class="container-fluid">

                <!--Start Dashboard Content-->

                <div class="card mt-3">
                    <div class="card-content">
                        <div class="row row-group m-0">
                            <div class="col-12 col-lg-6 col-xl-3 border-light">
                                <div class="card-body">
                                    <a href="~/FlowerBack/UserInfo">
                                        <h5 class="text-white mb-0">@ViewBag.MainInfo.UserNum <span class="float-right"><i class="zmdi zmdi-account-circle "></i></span></h5>
                                    </a>
                                    <div class="progress my-3" style="height:3px;">
                                        @{ 
                                            <div class="progress-bar" style="width:@ViewBag.MainInfo.UserPer"></div>
                                        }
                                    </div>
                                    <a href="~/FlowerBack/UserInfo"><p class="mb-0 text-white small-font">正常账号数量<span class="float-right">@ViewBag.MainInfo.UserPer</span></p></a>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 col-xl-3 border-light">
                                <div class="card-body">
                                    <a href="~/FlowerBack/GoodInfo">
                                        <h5 class="text-white mb-0">@ViewBag.MainInfo.GoodNum<span class="float-right"><i class="zmdi zmdi-assignment-check"></i></span></h5>
                                    </a>
                                    <div class="progress my-3" style="height:3px;">
                                        @{
                                            <div class="progress-bar" style="width:@ViewBag.MainInfo.GoodPer"></div>
                                        }
                                    </div>
                                    <a href="~/FlowerBack/GoodInfo">   
                                         <p class="mb-0 text-white small-font">上架商品数量<span class="float-right">@ViewBag.MainInfo.GoodPer</span></p>
                                    </a>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 col-xl-3 border-light">
                                <div class="card-body">
                                    <a href="~/FlowerBack/OrderInfo">
                                        <h5 class="text-white mb-0">@ViewBag.MainInfo.OrderNum<span class="float-right"><i class="fa fa-shopping-cart"></i></span></h5>
                                    </a>
                                    <div class="progress my-3" style="height:3px;">
                                        <div class="progress-bar" style="width:100%"></div>
                                    </div>
                                    <a href="~/FlowerBack/OrderInfo">
                                        <p class="mb-0 text-white small-font">待发货订单量</p>
                                    </a>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 col-xl-3 border-light">
                                <div class="card-body">
                                    <a href="~/FlowerBack/OrderInfo">
                                        <h5 class="text-white mb-0">@ViewBag.MainInfo.ConMoney<span class="float-right"><i class="fa fa-usd"></i></span></h5>
                                    </a>
                                    <div class="progress my-3" style="height:3px;">
                                        <div class="progress-bar" style="width:100%"></div>
                                    </div>
                                    <a href="~/FlowerBack/OrderInfo">
                                        <p class="mb-0 text-white small-font">本月营收金额</p>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 col-lg-4 col-xl-4">
                        <div class="card" style="height:468px;">
                            <div class="card-header">
                                当前身份：超级管理员
                            </div>
                            <div class="card-body">
                                <p><span id="time"></span></p>
                                <br />

                                @*加载和风天气控件*@
                                <div style="width: 100%; display: flex;">
                                    <div id="he-plugin-standard" style="width:auto"></div>
                                </div>
                                
                                <script>
                                    WIDGET = {
                                        CONFIG: {
                                            "layout": 1,
                                            "width": 500,
                                            "height": 150,
                                            "background": 1,
                                            "dataColor": "FFFFFF",
                                            "language": "zh",
                                            "borderRadius": 5,
                                            "key": "这里输入KEY"
                                        }
                                    }
                                </script>
                                <script src="https://widget.qweather.net/standard/static/js/he-standard-common.js?v=2.0"></script>


                                <div style="text-align:center; margin :20px auto;margin-bottom:50px;position: absolute;top:0px;right:15px;">
                                    <img style="width: 80px;border-radius: 50%;" src="~/Images/UserHead/headimg_def1.jpg" />
         

                                    <p>
                                        <a href="~/flowerback/exit" onclick="return confirm('是否确认退出？')"><h5>退出登录</h5></a>
                                    </p>
                                </div>


                                <p><span id="date_info"></span></p>
                            </div>
                            <script>
                                $(function() {
                                    var myDate = new Date;
                                    var year = myDate.getFullYear(); //获取当前年
                                    var mon = myDate.getMonth() + 1; //获取当前月
                                    var date = myDate.getDate(); //获取当前日
                                    //var h = myDate.getHours();//获取当前小时数(0-23)
                                    // var m = myDate.getMinutes();//获取当前分钟数(0-59)
                                    // var s = myDate.getSeconds();//获取当前秒
                                    var week = myDate.getDay();
                                    var weeks = ["星期日", "星期一", "星期二", "星期三", "星期四", "星期五", "星期六"];
                                    console.log(year, mon, date, weeks[week])
                                    $("#time").html(year + "年" + mon + "月" + date + "日" + weeks[week]);

                                })
                            </script>
                        </div>
                    </div>

                    <div class="col-12 col-lg-8 col-xl-8">
                        <div class="card">
                            <div class="card-header">
                                最新商品
                            </div>
                            <div class="card-body" style="overflow:auto;margin-right:20px;">
                                <div style="height:360px;width:1550px;">
                                    @for (int i = 0; i < ViewBag.MainGoodList.Count && i < 6; i++)
                                    {
                                        <a href="/FlowerBack/GoodSet?gid=@ViewBag.MainGoodList[i].GoodID">
                                            <div class="contRight_Item">
                                                <div style="width: 200px;height: 250px;margin: 0px auto;overflow:hidden">
                                                    <img style="width:250px;height:250px;margin-left: -25px;" src="@ViewBag.MainGoodList[i].GoodMainImg" />
                                                </div>
                                                <br />
                                                <span class="con_goodname">@Html.Raw(ViewBag.MainGoodList[i].GoodName)</span>
                                                <span>@ViewBag.MainGoodList[i].GoodPrice</span>
                                            </div>
                                        </a>
                                    }
                                </div>


                                @*<div class="chart-container-1">

                                </div>*@
                            </div>

                            @*<div class="row m-0 row-group text-center border-top border-light-3">
                                <div class="col-12 col-lg-4">
                                    <div class="p-3">
                                        <h5 class="mb-0">45.87M</h5>
                                        <small class="mb-0">Overall Visitor <span> <i class="fa fa-arrow-up"></i> 2.43%</span></small>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-4">
                                    <div class="p-3">
                                        <h5 class="mb-0">15:48</h5>
                                        <small class="mb-0">Visitor Duration <span> <i class="fa fa-arrow-up"></i> 12.65%</span></small>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-4">
                                    <div class="p-3">
                                        <h5 class="mb-0">245.65</h5>
                                        <small class="mb-0">Pages/Visit <span> <i class="fa fa-arrow-up"></i> 5.62%</span></small>
                                    </div>
                                </div>
                            </div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
