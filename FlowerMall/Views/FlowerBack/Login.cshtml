
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>后台登录</title>
    <link href="~/Content/bs4.pop.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bs4.pop.js"></script>
    <link href="~/Content/FlowerBack/animate.css" rel="stylesheet" />
    <link href="~/Content/FlowerBack/app-style.css" rel="stylesheet" />
    <link href="~/Content/FlowerBack/icons.css" rel="stylesheet" />
    <link href="~/Content/FlowerBack/pace.min.css" rel="stylesheet" />
    <link href="~/Content/FlowerBack/sidebar-menu.css" rel="stylesheet" />
</head>
<body class="bg-theme bg-theme1">

    <!-- start loader -->
   
    <!-- end loader -->
    <!-- Start wrapper-->
    <div id="wrapper" style="margin-top:10%;">
        <div class="card card-authentication1 mx-auto my-5">
            <div class="card-body">
                <div class="card-content p-2">
                    <div class="text-center">
                        <img src="~/Images/花语logo.png" alt="logo icon">
                    </div>
                    <div class="card-title text-uppercase text-center py-3">Flower</div>
                    <form action="~/flowerback/login" method="post" onsubmit="return LoginAdk()">
                        <div class="form-group">
                            <label for="" class="sr-only">账号</label>
                            <div class="position-relative has-icon-right">
                                <input type="text" id="AdminLoginName" name="AdminLoginName" class="form-control input-shadow" maxlength="16" placeholder="请输入管理员账号" autocomplete="off">
                                <div class="form-control-position">
                                    <i class="icon-user"></i>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class="sr-only">密码</label>
                            <div class="position-relative has-icon-right">
                                <input type="password" id="AdminLoginPwd" name="AdminLoginPwd" class="form-control input-shadow" maxlength="16" placeholder="请输入你的密码">
                                <div class="form-control-position">
                                    <i class="icon-lock"></i>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-light btn-block">登录</button>

                    </form>
                </div>
            </div>
            <div class="card-footer text-center py-3">
                <p class="text-warning mb-0">欢迎你的回归</p>
            </div>
        </div>
        <script>
            function LoginAdk() {
                if (CheckName() && CheckPwd()) {
                    return true;
                } else {
                    return false;
                }
            }

            function CheckName() {
                var name = $("#AdminLoginName").val();
                if (name.length < 5) {
                    alert('请输入账号');
                    return false;
                } else if (name.length >= 5 || name.length <= 16) {
                    return true;
                } else {
                    return false;
                }
            }
            function CheckPwd() {
                var name = $("#AdminLoginPwd").val();
                if (name.length < 6) {
                    alert('请输入密码');
                    return false;
                } else if (name.length >= 6 || name.length <= 16) {
                    return true;
                } else {
                    return false;
                }
            }
        </script>

    </div>

</body>
</html>
